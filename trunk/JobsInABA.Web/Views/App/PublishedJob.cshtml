<script>
    function viewcandidate(elem) {
        var id = elem.id;
        $("#" + id).attr("onclick", "closeallcandidate(this)");
        $(".candidatelist").slideUp();
        $("#candidate" + id).slideDown();
    }
    function closeallcandidate(elem) {
        var id = elem.id;
        $("#" + id).attr("onclick", "viewcandidate(this)");
        $(".candidatelist").slideUp();
    }
    function clicked() {
        alert('Delete Successfully');
    }
</script>