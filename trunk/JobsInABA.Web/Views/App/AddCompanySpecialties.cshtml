<form id="specialitiesform" style="display:none; text-align: right;">
    <input style="float:left;" type="text" placeholder="COMPANY SPECIALTIES " ng-model="addCompanySpecialistModel.Name" class="formfull">
    <input class="addbutton" type="button" value="ADD" ng-click="addCompanySpecialist(addCompanySpecialistModel)"> 
    <div class="clear"></div>
</form>
<div class="top" style="padding: 26px; color:black;" ng-repeat="o in objSpecialist">
    <p ng-hide="isEditSpecialist_{{o.id}}">{{o.Name}} </p>
    <input ng-show="isEditSpecialist_{{o.id}}" style="margin-top:0px;" type="text" placeholder="COMPANY SPECIALTIES " ng-model="editCompanySpecialistModel.Name" class="formfull">
    <a class="btn-edit" href="#" ng-show="isEditSpecialist_{{o.id}}" ng-click="saveEditSpecialist(editCompanySpecialistModel)"><img src="assets/img/save-24.png"></a>
    <a class="btn-edit" href="#" ng-show="isEditSpecialist_{{o.id}}" ng-click="cancelEditSpecialist(editCompanySpecialistModel)"><img src="assets/img/close.png"></a>
    <a class="btn-edit" href="#" ng-hide="isEditSpecialist_{{o.id}}" ng-click="editSpecialist(o)"><img src="assets/img/edit-32.png"></a>
    <a class="btn-delete" href="#" ng-hide="isEditSpecialist_{{o.id}}" ng-click="deleteSpecialist(o.id)"><img src="assets/img/delete-32.png"></a>
</div>
